#include<stdio.h>
#include<conio.h>
#include<math.h>

void main()

{
	int a, b, c, d;

	printf("Lutfen 3 Basamakli Bir Sayi Giriniz: ");
	scanf_s("%d" ,&a);

	b = (a / 100) % 10;
	c = (a / 10) % 10;
	d = a % 10;

	if (a > 99 && a < 1000)
	{


		if (a == pow(float(b), 3) + pow(float(c), 3) + pow(float(d), 3))

		{
			printf("Sayinin Rakamlarinin Kupleri Toplami Kendine Esittir..");

		}

		else{

			printf("Sayinin Rakamlarinin Kupleri Toplami Kendine Esit Degildir..");
		}

	}

	else{

		printf("Eksik veya Hatali Bir Sayi Girdiniz..");

	}

	_getch();
}
